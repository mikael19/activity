apiVersion: cert-manager.io/v1alpha2
kind: Certificate
metadata:
  name: letsencrypt-${APPLICATION_ENV}-certificate
  namespace: ${APPLICATION_ENV}
spec:
  secretName: letsencrypt-cert-${APPLICATION_ENV}-tls
  issuerRef:
    name: letsencrypt-${APPLICATION_ENV}-issuer
    kind: ClusterIssuer
  dnsNames:
  - ${HOST_DOMAIN}
  acme:
    config:
    - dns01:
        provider: clouddns
      domains:
      - ${HOST_DOMAIN}
